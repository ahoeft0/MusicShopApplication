@model MusicShopApplication.Models.Music

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Music</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performer" class="control-label"></label>
                <input asp-for="Performer" class="form-control" />
                <span asp-validation-for="Performer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song" class="control-label"></label>
                <input asp-for="Song" class="form-control" />
                <span asp-validation-for="Song" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-lg" style="width: 200px" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a class="btn btn-primary colorScheme" asp-controller="Musics" asp-action="Administrator">Return</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
