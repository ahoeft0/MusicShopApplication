@model IEnumerable<MusicShopApplication.Models.Music>

@{
    ViewData["Title"] = "Administrator Page";
}

<h1>Administrator Page</h1>

<p>
    <a class="btn btn-primary colorScheme" asp-action="Create">Create New Entry</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusicOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Song)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusicOn)
            </td>
            <td>
                @string.Format("${0:N2}", item.Price)
            </td>
            <td>
                <a class="btn btn-primary colorScheme" asp-action="Edit" asp-route-id="@item.MusicId">Update Entry</a>
                <a class="btn btn-primary btn btn-danger" asp-action="Delete" asp-route-id="@item.MusicId">Delete Entry</a>
            </td>
        </tr>
}
    </tbody>
</table>
